<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User info</title>
</head>
  
<body>

  <div>
    <h3>User info</h3>
    <p>
      Email: <%= @info[:email] %>
    </p>
    <p>
      <%= "#{@user.to_s}'s interests:" %>
    </p>
    <% interests = @info[:interests].each.join(', ') %>
    <% interests = interests[0..-2] %>
        <%= "#{interests}" %>
    <% end %>
  </div>
  
</body>