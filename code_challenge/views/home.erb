<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= @title %></title>
</head>

<body>
  
  <div>
    <h2><%= @title %></h2>
      <div>
        <ul>
          <% @files.each do |file| %>
            <li>
            <% @path = file.split('/')[-1] %>
            <a href=<%= "files/" + @path[0...-4] %>><%= @path %></a>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
    <a href=<%= @sort_order == 'ascending' ? '/?sort=descending' : '/?sort=ascending' %>>
      <%= "sort " + (@sort_order == 'ascending' ? 'descending' : 'ascending') %>
    </a>
  </div>

</body>
</html>